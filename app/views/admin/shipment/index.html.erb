<%= link_to new_admin_shipment_path do %>
  <button>New</button>
<% end %>
<table>
  <tr>
    <td>title</td>
    <td>Recipients</td>
    <td>description</td>
    <td>Order Limit</td>
    <td>date</td>
    <td>image</td>
    <td>Actions</td>
  </tr>
  <% @shipments.each do |s| %>
    <tr>
      <td><%= s.title %></td>
      <td>
        <% s.recipients.each do |r| %>
          <div><%= r.email %>,</div>
        <% end %>
      </td>
      <td><%= s.description || 'NO DESCRIPTION' %></td>
      <td><%= s.order_limit %></td>
      <td><%= s.fulfillment_date || 'NO DATE' %></td>
      <% if s.video_content? %>
        <td><%= video_tag url_for(s.image)%></td>
      <% elsif s.image_content? %>
        <td><%= image_tag url_for(s.image)%></td>
      <% else %>
        <td><%= image_tag url_for('default.gif')%></td>
      <% end %>
      <td>
        <%= link_to edit_admin_shipment_path(s) do %>
          <button>Edit</button>
        <% end %>
        <%= button_to 'Delete', admin_shipment_path(s), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
      </td>
    </tr>
<% end %>
</table>
<%= paginate @shipments %>
