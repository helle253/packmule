<%= link_to new_admin_shipment_path do %>
  <button>New</button>
<% end %>
<table>
  <tr>
    <td>title</td>
    <td>description</td>
    <td>date</td>
    <td>image</td>
    <td>Actions</td>
  </tr>
  <% @shipments.each do |s| %>
    <tr>
      <td><%= s.title %></td>
      <td><%= s.description || 'NO DESCRIPTION' %></td>
      <td><%= s.fulfillment_date || 'NO DATE' %></td>
      <td><%= image_tag url_for(s.image)%></td>
      <td>
        <%= link_to edit_admin_shipment_path(s) do %>
          <button>Edit</button>
        <% end %>
        <%= link_to admin_shipment_path(s), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }  do %>
          <button>Delete</button>
        <% end %>
      </td>
    </tr>
<% end %>
</table>
<%= paginate @shipments %>
