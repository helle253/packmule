<%= form_with url: user_my_allergies_path, model: @recipient, method: :put, data: { recipient_id: @recipient.id } do |form| %>
  <table>
    <tr>
      <td>Allergen</td>
      <td>Are you allergic?</td>
    </tr>
    <% Allergen.all.map do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><allergen-td>
          <%= form.radio_button "allergens[#{a.id}]", true, checked: @recipient.allergens.include?(a) %>
          <%= form.label '☹', style:'color:red' %>
          <%= form.radio_button "allergens[#{a.id}]", false, checked: !@recipient.allergens.include?(a) %>
          <%= form.label '☺', style:'color:green' %>
        </allergen-td></td>
      </tr>
    <% end %>
  </table>
  <%= form.submit "Dont kill me" %>
<% end %>
