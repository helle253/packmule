<card_container>
  <% @shipments.each do |s| %>
      <shipment_card>
        <%= link_to shipment_path(s) do %>
          <%= image_tag url_for(s.image.present? ? s.image : 'default.gif')%>
        <% end %>
        <shipment_card_title>
          <%= s.title %><%= s.fulfillment_date.present? ? " (#{s.fulfillment_date})" : '' %>
        </shipment_card_title>
      </shipment_card>
  <% end %>
</card_container>
